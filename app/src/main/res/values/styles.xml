<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" >
        <!-- Customize your theme here. -->
    </style>

    <!--这是主页上底部的RadioButton的样式-->
    <style name="myRadioButton" >
        <item name="android:background">@null</item>
        <item name="android:button">@null</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">13sp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--主页右上角的Button样式-->
    <style name="home_bar_button">
        <item name="android:layout_width">@dimen/activity_title_bar_button_width</item>
        <item name="android:layout_height">@dimen/activity_title_bar_button_width</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
    </style>
</resources>
